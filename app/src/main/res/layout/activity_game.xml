<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_image_table2"
    tools:context=".GameActivity">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="52dp"
        android:layout_marginLeft="52dp"
        android:layout_marginTop="24dp"
        android:text="Dealer:"
        android:textColor="@color/white"
        android:textSize="22sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bet_amount" />

    <ImageView
        android:id="@+id/d1"
        android:layout_width="70dp"
        android:layout_height="100dp"
        android:layout_marginStart="52dp"
        android:layout_marginLeft="52dp"
        android:layout_marginTop="116dp"
        android:background="@drawable/cardback"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/d2"
        android:layout_width="70dp"
        android:layout_height="100dp"
        android:layout_marginStart="76dp"
        android:layout_marginLeft="76dp"
        android:layout_marginTop="116dp"
        android:background="@drawable/cardback"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/d3"
        android:layout_width="70dp"
        android:layout_height="100dp"
        android:layout_marginStart="96dp"
        android:layout_marginLeft="96dp"
        android:layout_marginTop="116dp"
        android:background="@drawable/card_2c"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/d4"
        android:layout_width="70dp"
        android:layout_height="100dp"
        android:layout_marginStart="124dp"
        android:layout_marginLeft="124dp"
        android:layout_marginTop="116dp"
        android:background="@drawable/card_2d"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/d5"
        android:layout_width="70dp"
        android:layout_height="100dp"
        android:layout_marginStart="144dp"
        android:layout_marginLeft="144dp"
        android:layout_marginTop="116dp"
        android:background="@drawable/card_3c"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/d6"
        android:layout_width="70dp"
        android:layout_height="100dp"
        android:layout_marginStart="168dp"
        android:layout_marginLeft="168dp"
        android:layout_marginTop="116dp"
        android:background="@drawable/card_3d"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/d7"
        android:layout_width="70dp"
        android:layout_height="100dp"
        android:layout_marginStart="184dp"
        android:layout_marginLeft="184dp"
        android:layout_marginTop="116dp"
        android:background="@drawable/card_4c"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/d8"
        android:layout_width="70dp"
        android:layout_height="100dp"
        android:layout_marginStart="216dp"
        android:layout_marginLeft="216dp"
        android:layout_marginTop="116dp"
        android:background="@drawable/card_4d"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/d9"
        android:layout_width="70dp"
        android:layout_height="100dp"
        android:layout_marginStart="244dp"
        android:layout_marginLeft="244dp"
        android:layout_marginTop="116dp"
        android:background="@drawable/card_5c"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/player_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:text="--"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/textView4"
        app:layout_constraintStart_toEndOf="@+id/textView4"
        app:layout_constraintTop_toTopOf="@+id/textView4" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="52dp"
        android:layout_marginLeft="52dp"
        android:layout_marginBottom="32dp"
        android:text="Player:"
        android:textColor="@color/white"
        android:textSize="22sp"
        app:layout_constraintBottom_toTopOf="@+id/g1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/d2"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/g1"
        android:layout_width="70dp"
        android:layout_height="100dp"
        android:layout_marginStart="52dp"
        android:layout_marginLeft="52dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/card_1c"
        app:layout_constraintBottom_toTopOf="@+id/double_button"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/g2"
        android:layout_width="70dp"
        android:layout_height="100dp"
        android:layout_marginStart="80dp"
        android:layout_marginLeft="80dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/card_1d"
        app:layout_constraintBottom_toTopOf="@+id/double_button"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/g3"
        android:layout_width="70dp"
        android:layout_height="100dp"
        android:layout_marginStart="104dp"
        android:layout_marginLeft="104dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/card_2c"
        app:layout_constraintBottom_toTopOf="@+id/double_button"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/g4"
        android:layout_width="70dp"
        android:layout_height="100dp"
        android:layout_marginStart="124dp"
        android:layout_marginLeft="124dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/card_2d"
        app:layout_constraintBottom_toTopOf="@+id/double_button"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/g5"
        android:layout_width="70dp"
        android:layout_height="100dp"
        android:layout_marginStart="148dp"
        android:layout_marginLeft="148dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/card_3c"
        app:layout_constraintBottom_toTopOf="@+id/double_button"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/g6"
        android:layout_width="70dp"
        android:layout_height="100dp"
        android:layout_marginStart="168dp"
        android:layout_marginLeft="168dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/card_3d"
        app:layout_constraintBottom_toTopOf="@+id/double_button"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/g7"
        android:layout_width="70dp"
        android:layout_height="100dp"
        android:layout_marginStart="192dp"
        android:layout_marginLeft="192dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/card_4c"
        app:layout_constraintBottom_toTopOf="@+id/double_button"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/g8"
        android:layout_width="70dp"
        android:layout_height="100dp"
        android:layout_marginStart="216dp"
        android:layout_marginLeft="216dp"
        android:background="@drawable/card_4d"
        app:layout_constraintBottom_toBottomOf="@+id/g6"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/g9"
        android:layout_width="70dp"
        android:layout_height="100dp"
        android:layout_marginStart="244dp"
        android:layout_marginLeft="244dp"
        android:background="@drawable/card_5c"
        app:layout_constraintBottom_toBottomOf="@+id/g6"
        app:layout_constraintStart_toStartOf="parent" />


    <TextView
        android:id="@+id/bet_amount_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        android:text="Bet amount:"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/bet_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        android:text="--"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/bet_amount_heading"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/dealer_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:text="--"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/textView5"
        app:layout_constraintStart_toEndOf="@+id/textView5"
        app:layout_constraintTop_toTopOf="@+id/textView5" />

    <Button
        android:id="@+id/stand_button"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginBottom="16dp"
        android:text="stand"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/double_button"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        tools:visibility="invisible" />

    <Button
        android:id="@+id/double_button"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginBottom="16dp"
        android:text="Double"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/hit_button"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/stand_button"
        tools:visibility="invisible" />


    <Button
        android:id="@+id/hit_button"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginBottom="16dp"
        android:text="Hit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/double_button"
        tools:visibility="invisible" />


    <ImageView
        android:id="@+id/game_result"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="72dp"
        android:layout_marginLeft="72dp"
        android:layout_marginBottom="16dp"
        android:src="@drawable/win"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/play_again"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Play again"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/game_result"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/game_result"
        app:layout_constraintTop_toTopOf="@+id/game_result" />

    <Button
        android:id="@+id/surrender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"

        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:text="Surrender"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/save_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:text="Save State"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/surrender" />
</androidx.constraintlayout.widget.ConstraintLayout>